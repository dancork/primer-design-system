{
  "jsc": {
    "target": "es2019",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "noInterop": true
  },
  "sourceMaps": true,
  "exclude": [
    "jest.config.ts",
    ".*.spec.tsx?$",
    ".*.test.tsx?$",
    "./jest-setup.ts$",
    "./**/jest-setup.ts$",
    "./jest-setup.base.ts$",
    "../../jest-setup.base.ts$",
    ".*.js$"
  ]
}
